<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Atlassian API Test Suite" parallel="none">

    <!-- Jira Integration Listener - Creates defects for failed tests -->
    <listeners>
        <listener class-name="com.geofence.integrations.jira.JiraTestListener"/>
    </listeners>

    <test name="Jira API Tests">
        <classes>
            <class name="com.geofence.tests.api.JiraApiTests"/>
        </classes>
    </test>
    
    <test name="Confluence API Tests">
        <classes>
            <class name="com.geofence.tests.api.ConfluenceApiTests"/>
        </classes>
    </test>

</suite>
