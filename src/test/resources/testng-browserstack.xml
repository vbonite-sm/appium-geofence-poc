<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BrowserStack Test Suite" parallel="none">

    <parameter name="executionMode" value="browserstack"/>
    
    <!-- Jira Integration Listener - Creates defects for failed tests -->
    <listeners>
        <listener class-name="com.geofence.integrations.jira.JiraTestListener"/>
    </listeners>

    <test name="Android Geofence Tests">
        <classes>
            <class name="com.geofence.tests.android.GeofenceTest"/>
        </classes>
    </test>
    
    <test name="iOS Geofence Tests">
        <parameter name="platform" value="ios"/>
        <classes>
            <class name="com.geofence.tests.ios.GeofenceTestiOS"/>
        </classes>
    </test>
    
    <test name="API Integration Tests">
        <classes>
            <class name="com.geofence.tests.api.JiraApiTests"/>
            <class name="com.geofence.tests.api.ConfluenceApiTests"/>
        </classes>
    </test>

</suite>